<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="30px"
            android:orientation="vertical"
            android:paddingTop="30px">

            <RadioGroup
                android:id="@+id/boardstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/statusing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="모집" />

                <RadioButton
                    android:id="@+id/statuslight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="번개" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:text="출발지"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputStart"
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:layout_margin="10px"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:height="150px"
                android:background="@color/inputbg"
                android:hint="출발지를 입력해 주세요."
                android:paddingLeft="50px"
                android:textColorHint="@color/dimgray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:text="도착지"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputarrive"
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:layout_margin="10px"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:height="150px"
                android:background="@color/inputbg"
                android:hint="도착지를 입력해 주세요."
                android:paddingLeft="50px"
                android:textColorHint="@color/dimgray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:text="모임장소"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputplace"
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:layout_margin="10px"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:height="150px"
                android:background="@color/inputbg"
                android:hint="모임장소를 입력해 주세요."
                android:paddingLeft="50px"
                android:textColorHint="@color/dimgray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:text="설명글"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputcomment"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_margin="10px"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:height="150px"
                android:background="@color/inputbg"
                android:hint="설명글을 입력해 주세요."
                android:paddingLeft="50px"
                android:textColorHint="@color/dimgray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:text="시간"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TimePicker
                android:id="@+id/inputTime"
                android:layout_width="match_parent"
                android:layout_height="180px"
                android:layout_margin="10px"
                android:timePickerMode="spinner" />

            <DatePicker
                android:id="@+id/inputDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:datePickerMode="spinner" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:text="인원 수"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <NumberPicker
                android:id="@+id/inputPeople"
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:layout_margin="10px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/write"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:layout_weight="1"
                    android:background="@color/yellow"
                    android:text="작성완료"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/gotohome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:layout_weight="1"
                    android:background="#EFE8CE"
                    android:text="작성취소"
                    android:textColor="@color/gray"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>