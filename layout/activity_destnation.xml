<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomline"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backaction"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="#00000000"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/arrowiosback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20px"
            android:layout_weight="1"
            android:text="나의 목적지"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/boardsection"
                android:layout_width="match_parent"
                android:layout_height="800px"
                android:layout_margin="30px"
                android:background="@drawable/ingboard">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/boardstatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="52dp"
                        android:layout_marginLeft="52dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/ingstatus"
                        android:padding="20px"
                        android:text="모집중"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="52dp"
                        android:layout_marginLeft="52dp"
                        android:layout_marginTop="8dp"
                        android:text="출발지"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/boardstatus" />

                    <TextView
                        android:id="@+id/arrive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="48dp"
                        android:layout_marginRight="48dp"
                        android:text="도착지"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/start"
                        app:layout_constraintTop_toBottomOf="@+id/boardset"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/meetTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="52dp"
                        android:layout_marginLeft="52dp"
                        android:layout_marginTop="16dp"
                        android:text="11월 04일 16:00"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/start"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/meetLoaction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="52dp"
                        android:layout_marginLeft="52dp"
                        android:layout_marginTop="12dp"
                        android:text="모임 장소"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/meetTime"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="52dp"
                        android:layout_marginLeft="52dp"
                        android:layout_marginTop="24dp"
                        android:text="요금 1200"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/meetLoaction"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/boardset"
                        android:layout_width="56dp"
                        android:layout_height="34dp"
                        android:layout_marginStart="176dp"
                        android:layout_marginLeft="176dp"
                        android:layout_marginTop="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.085"
                        app:layout_constraintStart_toEndOf="@+id/boardstatus"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/dot"
                        tools:ignore="MissingConstraints,VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/writedate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="52dp"
                        android:layout_marginRight="52dp"
                        android:layout_marginBottom="16dp"
                        android:text="21/11/05/ 11:15"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="70dp"
                        android:layout_height="65dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/arrive"
                        app:layout_constraintHorizontal_bias="0.453"
                        app:layout_constraintStart_toEndOf="@+id/start"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.212"
                        app:srcCompat="@drawable/right_arrow" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="128dp"
                        android:layout_marginLeft="128dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/people"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/charge"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.736"
                        app:srcCompat="@drawable/user"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="44dp"
                        android:layout_marginRight="44dp"
                        android:text="2/3"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.981"
                        app:layout_constraintStart_toEndOf="@+id/charge"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.736"
                        tools:ignore="MissingConstraints" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <ListView
                android:layout_weight="1"
                android:id="@+id/applimember"
                android:layout_width="match_parent"
                android:layout_height="600px"
                android:layout_margin="30px"
                android:divider="#ffffff"
                android:dividerHeight="10dp"
                android:fadingEdge="none"></ListView>


        </LinearLayout>
    </ScrollView>
</LinearLayout>