<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="75px">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/backaction"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/arrowiosback"
            android:background="#00000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아이디 찾기"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="25px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <Button
            android:id="@+id/findIDPhone"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="휴대폰 인증"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:background="@drawable/findtypebtnclick"
            android:layout_margin="10px"/>
        <Button
            android:id="@+id/findIDEmail"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="이메일 인증"
            android:textColor="@color/gray"
            android:textSize="15dp"
            android:textStyle="bold"
            android:background="@drawable/findtypebtnnone"
            android:layout_margin="10px"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="회원가입시 등록한 정보로\n아이디 일부를 확인 할 수 있습니다."
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/inputNAME"
            android:height="150px"
            android:paddingLeft="50px"
            android:hint="이름을 입력해 주세요."
            android:textColorHint="@color/dimgray"
            android:background="@color/inputbg"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/inputPHONE"
            android:height="150px"
            android:paddingLeft="50px"
            android:hint="전화번호를 입력해 주세요."
            android:textColorHint="@color/dimgray"
            android:background="@color/inputbg"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="140px"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/inputEMAIL"
            android:height="150px"
            android:paddingLeft="50px"
            android:hint="이메일을 입력해 주세요."
            android:textColorHint="@color/dimgray"
            android:background="@color/inputbg"/>
        <Button
            android:id="@+id/searchID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/yellow"
            android:text="확인"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/resultIDarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/resultID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="고객님의 정보와 일치하는 아이디입니다.\n\nuser****"
            android:textStyle="bold"
            android:textSize="20dp" />
        <LinearLayout
            android:id="@+id/gotoSigninArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아직 회원이 아닌가요? "
                android:textSize="15dp"
                android:textColor="@color/dimgray"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/gotoSignin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   회원가입>"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_weight="1"
                android:id="@+id/gotoLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/yellow"
                android:text="로그인"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/gotofindPW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/findtypebtnnone"
                android:text="비밀번호 찾기"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>